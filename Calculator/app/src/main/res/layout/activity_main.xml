<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hsenid.android.calculator.MainActivity"
    android:id="@+id/rr">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/calcText"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/oneBtn"
        android:layout_below="@+id/calcText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/twoBtn"
        android:layout_above="@+id/fourBtn"
        android:layout_alignLeft="@+id/fiveBtn"
        android:layout_alignStart="@+id/fiveBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/threeBtn"
        android:layout_alignTop="@+id/twoBtn"
        android:layout_toRightOf="@+id/twoBtn"
        android:layout_toEndOf="@+id/twoBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/fourBtn"
        android:layout_below="@+id/oneBtn"
        android:layout_toLeftOf="@+id/twoBtn"
        android:layout_toStartOf="@+id/twoBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/fiveBtn"
        android:layout_below="@+id/oneBtn"
        android:layout_toRightOf="@+id/oneBtn"
        android:layout_toEndOf="@+id/oneBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/sixBtn"
        android:layout_alignTop="@+id/fiveBtn"
        android:layout_alignLeft="@+id/threeBtn"
        android:layout_alignStart="@+id/threeBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/sevenBtn"
        android:layout_below="@+id/fourBtn"
        android:layout_toLeftOf="@+id/fiveBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eightBtn"
        android:layout_alignTop="@+id/nineBtn"
        android:layout_alignLeft="@+id/fiveBtn"
        android:layout_alignStart="@+id/fiveBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nineBtn"
        android:layout_below="@+id/fiveBtn"
        android:layout_toRightOf="@+id/fiveBtn"
        android:layout_toEndOf="@+id/fiveBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/sumBtn"
        android:layout_below="@+id/sevenBtn"
        android:layout_alignLeft="@+id/nineBtn"
        android:layout_alignStart="@+id/nineBtn"
        android:layout_alignRight="@+id/nineBtn"
        android:layout_alignEnd="@+id/nineBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusBtn"
        android:layout_above="@+id/minusBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minusBtn"
        android:layout_below="@+id/threeBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/multiBtn"
        android:layout_above="@+id/divideBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divideBtn"
        android:layout_below="@+id/nineBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zeroBtn"
        android:layout_alignBottom="@+id/sumBtn"
        android:layout_toLeftOf="@+id/sumBtn"
        android:layout_alignLeft="@+id/eightBtn"
        android:layout_alignStart="@+id/eightBtn"
        android:layout_alignTop="@+id/sumBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/clearBtn"
        android:layout_alignTop="@+id/zeroBtn"
        android:layout_toLeftOf="@+id/zeroBtn"
        android:layout_toStartOf="@+id/zeroBtn" />
</RelativeLayout>
